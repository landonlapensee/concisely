<%= simple_form_for [ lesson, booking ] do |f| %>
  <%= f.input :start_time, label: "Start Time", html5: true, wrapper_html: { class: "w-5 inline_field_wrapper start_date" } %>
  <%= text_field :date, nil, class: "datepicker", data: {url: lesson_available_times_path(lesson) } %>
  <div class="times"></div>
  <%#= f.input :number_of_lessons, collection: (1..10).to_a, wrapper_html: { class: "w-5 inline_field_wrapper start_date" } %>
  <%= f.submit "Book", class: "btn btn-primary" %>
<% end %>
